# Property Monitor IF - Environment Configuration
# Copy this file to .env and customize values

# Database Configuration
DB_URL=sqlite:///data/olx_offers.sqlite
# Alternative PostgreSQL: postgresql://user:password@localhost:5432/property_monitor

# Server Configuration
API_HOST=localhost
API_PORT=8080
STREAMLIT_PORT=8501
SUPERSET_PORT=8088

# Python FastAPI Backend URL (for Node.js communication)
# Local development: http://localhost:8080
# Docker: http://python:8080
# Replit: use internal URL
PYTHON_API_URL=http://localhost:8080

# Scraper Configuration (Module 1: Botasaurus)
SCRAPER_DELAY_MS=5000
SCRAPER_MAX_PAGES=50
SCRAPER_HEADFUL=false
SCRAPER_PROXY_ENABLED=false
OLX_BASE_URL=https://www.olx.ua

# ML Configuration (Module 2: LightAutoML)
ML_TARGET_MAPE=15.0
ML_TRAIN_TEST_SPLIT=0.8
ML_VALIDATION_SIZE=0.2
ML_N_FOLDS=5
ML_TIMEOUT=3600

# Prophet Configuration (Module 3: Time Series)
PROPHET_FORECAST_MONTHS=6
PROPHET_CONFIDENCE_INTERVAL=0.8
PROPHET_CHANGEPOINT_PRIOR_SCALE=0.1

# Streamlit Configuration (Module 4: Public UI)
STREAMLIT_THEME_BASE=light
STREAMLIT_MAX_UPLOAD_SIZE=10
STREAMLIT_ENABLE_CORS=true

# Superset Configuration (Module 5: Analytics)
SUPERSET_SECRET_KEY=your-secret-key-here
SUPERSET_SQLALCHEMY_DATABASE_URI=sqlite:///data/olx_offers.sqlite
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_ADMIN_EMAIL=admin@property-monitor.local

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/property_monitor.log
LOG_ROTATION=10MB
LOG_RETENTION=30 days

# Security Configuration
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8501
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Street Mapping (Ivano-Frankivsk specific)
CITY_NAME=Івано-Франківськ
DEFAULT_DISTRICT=Центр
STREET_MAPPING_FILE=districts/streets_mapping.csv

# Performance Configuration
WORKERS=4
MAX_CONCURRENT_REQUESTS=10
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# External APIs (if needed)
EXCHANGE_RATE_API_KEY=your-api-key-here
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Development Configuration
DEBUG=true
TESTING=false
PROFILING=false
